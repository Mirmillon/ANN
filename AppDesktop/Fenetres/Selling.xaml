                </Grid.RowDefinitions>
                <Label Grid.Row="0" Grid.Column="4" Grid.ColumnSpan="2"  Style="{DynamicResource LabelStandard}" ></Label>
                <TextBox Grid.Row="0" Grid.Column="7" Grid.ColumnSpan="1" Style="{DynamicResource TextBoxBusiness}" Margin="22,5,3,5"  TextChanged="TextBoxNombre_Changed"/>
                <Label Grid.Row="1" Grid.Column="4" Grid.ColumnSpan="2"  Style="{DynamicResource LabelStandard}"></Label>
                <TextBox Grid.Row="1" Grid.Column="7" Grid.ColumnSpan="1" Style="{DynamicResource TextBoxBusiness}" Margin="22,5,3,5" TextChanged="TextBoxNombre_Changed"/>
